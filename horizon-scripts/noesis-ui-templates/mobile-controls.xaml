<Grid
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  d:DesignWidth="800" d:DesignHeight="450">

  <!-- Main Control Panel -->
  <Border Background="#CC000000" CornerRadius="20" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,50">
    <StackPanel Orientation="Horizontal" Spacing="20">
      
      <!-- Join Button -->
      <Button x:Name="JoinButton" Width="120" Height="60" Background="#667eea" CornerRadius="10">
        <TextBlock Text="Join Call" Foreground="White" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
      </Button>

      <!-- Leave Button -->
      <Button x:Name="LeaveButton" Width="120" Height="60" Background="#e53e3e" CornerRadius="10">
        <TextBlock Text="Leave" Foreground="White" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
      </Button>

      <!-- Move to View Button (Scripted Movement) -->
      <Button x:Name="MoveButton" Width="120" Height="60" Background="#48bb78" CornerRadius="10">
        <TextBlock Text="Best View" Foreground="White" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
      </Button>

    </StackPanel>
  </Border>
</Grid>
