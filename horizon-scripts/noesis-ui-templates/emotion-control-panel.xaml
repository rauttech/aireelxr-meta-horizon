&lt;!-- 
    NoesisUI Layout for Family Hologram Room
    Mobile-Optimized Emotion Control Panel
    
    SETUP INSTRUCTIONS:
    1. In Horizon Editor, create a new NoesisUI panel
    2. Copy this XML content into the UI editor
    3. Link button click events to the TypeScript functions
    4. Position the panel at a comfortable viewing height for mobile users
--&gt;

&lt;UserControl 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="800" Height="600"&gt;
    
    &lt;!-- Main Container with gradient background --&gt;
    &lt;Grid Background="#1A1A2E"&gt;
        &lt;Grid.RowDefinitions&gt;
            &lt;RowDefinition Height="120"/&gt;
            &lt;RowDefinition Height="*"/&gt;
            &lt;RowDefinition Height="100"/&gt;
        &lt;/Grid.RowDefinitions&gt;
        
        &lt;!-- Header Section --&gt;
        &lt;StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center"&gt;
            &lt;TextBlock 
                Text="AaireelXR Family Hologram Room" 
                FontSize="42" 
                FontWeight="Bold"
                Foreground="#00D9FF"
                HorizontalAlignment="Center"
                Margin="0,10,0,5"/&gt;
            &lt;TextBlock 
                Text="Express Your Emotions" 
                FontSize="24" 
                Foreground="#FFFFFF"
                Opacity="0.8"
                HorizontalAlignment="Center"/&gt;
        &lt;/StackPanel&gt;
        
        &lt;!-- Emotion Buttons Grid --&gt;
        &lt;Grid Grid.Row="1" Margin="40"&gt;
            &lt;Grid.RowDefinitions&gt;
                &lt;RowDefinition Height="*"/&gt;
                &lt;RowDefinition Height="*"/&gt;
            &lt;/Grid.RowDefinitions&gt;
            &lt;Grid.ColumnDefinitions&gt;
                &lt;ColumnDefinition Width="*"/&gt;
                &lt;ColumnDefinition Width="*"/&gt;
            &lt;/Grid.ColumnDefinitions&gt;
            
            &lt;!-- Heart Button --&gt;
            &lt;Button 
                x:Name="HeartButton"
                Grid.Row="0" Grid.Column="0"
                Margin="15"
                Background="#FF1744"
                BorderBrush="#FF5252"
                BorderThickness="4"
                CornerRadius="20"
                Click="OnHeartButtonClick"&gt;
                &lt;StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"&gt;
                    &lt;TextBlock 
                        Text="‚ù§Ô∏è" 
                        FontSize="80" 
                        HorizontalAlignment="Center"
                        Margin="0,10,0,10"/&gt;
                    &lt;TextBlock 
                        Text="HEART" 
                        FontSize="32" 
                        FontWeight="Bold"
                        Foreground="White"
                        HorizontalAlignment="Center"/&gt;
                &lt;/StackPanel&gt;
            &lt;/Button&gt;
            
            &lt;!-- Smile Button --&gt;
            &lt;Button 
                x:Name="SmileButton"
                Grid.Row="0" Grid.Column="1"
                Margin="15"
                Background="#FFD700"
                BorderBrush="#FFC107"
                BorderThickness="4"
                CornerRadius="20"
                Click="OnSmileButtonClick"&gt;
                &lt;StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"&gt;
                    &lt;TextBlock 
                        Text="üòä" 
                        FontSize="80" 
                        HorizontalAlignment="Center"
                        Margin="0,10,0,10"/&gt;
                    &lt;TextBlock 
                        Text="SMILE" 
                        FontSize="32" 
                        FontWeight="Bold"
                        Foreground="#1A1A2E"
                        HorizontalAlignment="Center"/&gt;
                &lt;/StackPanel&gt;
            &lt;/Button&gt;
            
            &lt;!-- Laugh Button --&gt;
            &lt;Button 
                x:Name="LaughButton"
                Grid.Row="1" Grid.Column="0"
                Margin="15"
                Background="#9C27B0"
                BorderBrush="#BA68C8"
                BorderThickness="4"
                CornerRadius="20"
                Click="OnLaughButtonClick"&gt;
                &lt;StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"&gt;
                    &lt;TextBlock 
                        Text="üòÇ" 
                        FontSize="80" 
                        HorizontalAlignment="Center"
                        Margin="0,10,0,10"/&gt;
                    &lt;TextBlock 
                        Text="LAUGH" 
                        FontSize="32" 
                        FontWeight="Bold"
                        Foreground="White"
                        HorizontalAlignment="Center"/&gt;
                &lt;/StackPanel&gt;
            &lt;/Button&gt;
            
            &lt;!-- Sad Button --&gt;
            &lt;Button 
                x:Name="SadButton"
                Grid.Row="1" Grid.Column="1"
                Margin="15"
                Background="#2196F3"
                BorderBrush="#64B5F6"
                BorderThickness="4"
                CornerRadius="20"
                Click="OnSadButtonClick"&gt;
                &lt;StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"&gt;
                    &lt;TextBlock 
                        Text="üò¢" 
                        FontSize="80" 
                        HorizontalAlignment="Center"
                        Margin="0,10,0,10"/&gt;
                    &lt;TextBlock 
                        Text="SAD" 
                        FontSize="32" 
                        FontWeight="Bold"
                        Foreground="White"
                        HorizontalAlignment="Center"/&gt;
                &lt;/StackPanel&gt;
            &lt;/Button&gt;
        &lt;/Grid&gt;
        
        &lt;!-- Footer with instructions --&gt;
        &lt;StackPanel Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center"&gt;
            &lt;TextBlock 
                Text="Tap an emotion to share with everyone!" 
                FontSize="20" 
                Foreground="#FFFFFF"
                Opacity="0.7"
                HorizontalAlignment="Center"/&gt;
        &lt;/StackPanel&gt;
    &lt;/Grid&gt;
    
    &lt;!-- Button Hover Effects (Optional Enhancement) --&gt;
    &lt;UserControl.Resources&gt;
        &lt;Style TargetType="Button"&gt;
            &lt;Setter Property="Cursor" Value="Hand"/&gt;
            &lt;Style.Triggers&gt;
                &lt;Trigger Property="IsMouseOver" Value="True"&gt;
                    &lt;Setter Property="Opacity" Value="0.9"/&gt;
                    &lt;Setter Property="RenderTransform"&gt;
                        &lt;Setter.Value&gt;
                            &lt;ScaleTransform ScaleX="1.05" ScaleY="1.05"/&gt;
                        &lt;/Setter.Value&gt;
                    &lt;/Setter&gt;
                &lt;/Trigger&gt;
                &lt;Trigger Property="IsPressed" Value="True"&gt;
                    &lt;Setter Property="RenderTransform"&gt;
                        &lt;Setter.Value&gt;
                            &lt;ScaleTransform ScaleX="0.95" ScaleY="0.95"/&gt;
                        &lt;/Setter.Value&gt;
                    &lt;/Setter&gt;
                &lt;/Trigger&gt;
            &lt;/Style.Triggers&gt;
        &lt;/Style&gt;
    &lt;/UserControl.Resources&gt;
&lt;/UserControl&gt;
