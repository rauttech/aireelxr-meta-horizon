<Grid
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  d:DesignWidth="400" d:DesignHeight="300">

    <Grid.Resources>
        <!-- Button Style -->
        <Style x:Key="EmotionButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="#33FFFFFF"/>
            <Setter Property="BorderBrush" Value="#FFFFFFFF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="40">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#66FFFFFF"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.1" ScaleY="1.1" CenterX="40" CenterY="40"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#99FFFFFF"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.9" ScaleY="0.9" CenterX="40" CenterY="40"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Grid.Resources>

    <!-- Main Panel -->
    <Border Background="#CC000000" CornerRadius="20" BorderBrush="#00AAFF" BorderThickness="3" Width="400" Height="200">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            
            <!-- Title -->
            <TextBlock Text="Express Emotion" Foreground="White" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20" FontWeight="Bold"/>
            
            <!-- Emotion Buttons Row -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                
                <!-- Heart / Love -->
                <Button x:Name="HeartButton" Style="{StaticResource EmotionButtonStyle}" Content="â¤ï¸" ToolTip="Love"/>
                
                <!-- Smile / Happy -->
                <Button x:Name="SmileButton" Style="{StaticResource EmotionButtonStyle}" Content="ðŸ˜Š" ToolTip="Happy"/>
                
                <!-- Laugh / Joy -->
                <Button x:Name="LaughButton" Style="{StaticResource EmotionButtonStyle}" Content="ðŸ˜‚" ToolTip="Laugh"/>
                
                <!-- Sad / Cry -->
                <Button x:Name="SadButton" Style="{StaticResource EmotionButtonStyle}" Content="ðŸ˜¢" ToolTip="Sad"/>
                
            </StackPanel>
            
        </StackPanel>
    </Border>

</Grid>
